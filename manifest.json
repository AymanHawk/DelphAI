{
    "manifest_version": 3,
    "name": "Outlook A.I Pal",
    "version": "1.0",
    "description": "A Chrome extension for Microsoft Outlook leveraging generative A.I to currate responses and improve responses.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://localhost:11434/api/generate/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://outlook.office.com/*"
            ],
            "js": [
                "lib/jquery-3.6.0.min.js",
                "content.js"
            ],
            "css": [
                "lib/tailwind.min.css",
                "styles.css"
            ]
        }
    ]
}